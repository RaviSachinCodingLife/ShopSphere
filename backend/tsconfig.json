{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",

    // ðŸ‘‡ Important: let TS work with JS
    "allowJs": true,
    "checkJs": false
  },

  // ðŸ‘‡ Tell TS exactly what to look at
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.js"],
  "exclude": ["node_modules", "dist"]
}
